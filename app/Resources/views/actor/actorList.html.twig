{% extends 'base.html.twig' %}

{% block title %}
    Akt√∏rer
{% endblock %}

{% block body %}
<body onload="checkCookie()">

    <button type="button" onclick="show('persons');">Personer</button>
    <button type="button" onclick="show('companies');">Selskaper</button>

    <br>
    <br>

    <div id="persons">

        Lag person
        <a href="/person/ny">
          <button type="button" class="btn btn-default" aria-label="Left Align">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          </button>
        </a>
        </br>
        <br>
        <h5>Personer</h5>

        <!-- Person search -->
        {{ form_start(personForm) }}
        {{ form_widget(personForm) }}
        {{ form_end(personForm) }}
        </br>

        <!-- Person cards -->
        <div>
        {% for person in persons %}
            <div class="col-md-3">
                <a class="actor-card" href="/person/{{ person.getId() }}">
                    <div style="background-color:#d3d3d3; display:block">
                        <div style="margin:0 2vw 0 2vw">
                            <div>
                                <h1 class="card-title">{{ person.getFirstName() }} {{person.getLastName()}}</h1>
                            </div>
                            <div>
                                <img class="center-block card-img" src="{{ asset('static/images/person/defaultprofile.png') }}" alt="Card image" style="max-width:10vw;max-height:15vw">
                            </div>
                            <div id="p-text">
                                <p class="card-subtitle">Kontaktinformasjon:</p>

                                <p class="card-text">
                                        {{ person.getEmail() }}
                                        </br>
                                        {#{{ person.getPhone() }} #}
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
        </div>
    </div>

    <div id="companies" style="display:none">
        Lag selskap
        <a href="/company/ny">
          <button type="button" class="btn btn-default" aria-label="Left Align">
            <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>
          </button>
        </a>
        </br>
        <h5>Selskaper</h5>

        <!-- Company search -->
        {{ form_start(companyForm) }}
        {{ form_widget(companyForm) }}
        {{ form_end(companyForm) }}
        </br>

        <!-- Company cards -->
        {% for company in companies %}
            <div class="col-md-3">
                <a class="actor-card" href="/selskap/{{ company.getId() }}">
                    <div style="background-color:#d3d3d3; display:block">
                        <div style="margin:0 2vw 0 2vw">
                            <div>
                                <h1 class="card-title">{{ company.getName() }}</h1>
                            </div>
                            <div>
                                <img class="center-block card-img" src="{{ asset('static/images/person/defaultprofile.png') }}" alt="Card image" style="max-width:10vw;max-height:15vw">
                            </div>
                            <div id="p-text">
                                <p class="card-subtitle">Kontaktinformasjon:</p>

                                <p class="card-text">
                                        Id: {{ company.getId() }}
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>

    <script src="{{ asset('static/js/showActor.js') }}"></script>
{% endblock %}
