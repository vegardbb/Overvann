<!DOCTYPE html>
<html lang="no">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Et knutepunkt for informasjo om overvann">
		<meta name="keywords" content="overvann, vann, avløp, informasjon">
		<title>{% block title %}Overvannssenteret!{% endblock %}</title>
		{% block stylesheets %}
			<link href="{{ asset('static/css/normalize.css') }}" rel="stylesheet" type="text/css">
			<link href="{{ asset('static/css/style.css') }}" rel="stylesheet" type="text/css">
			<link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/cerulean/bootstrap.min.css" rel="stylesheet">
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		{% endblock %}
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		{% block javascripts %}
			{% if app.environment == 'dev'%}
				<script src="https://npmcdn.com/react@15.3.1/dist/react-with-addons.js"></script>
				<script src="https://npmcdn.com/react-dom@15.3.1/dist/react-dom.js"></script>
			{% else %}
				<script src="https://npmcdn.com/react@15.3.1/dist/react-with-addons.min.js"></script>
				<script src="https://npmcdn.com/react-dom@15.3.1/dist/react-dom.min.js"></script>
			{% endif %}
			<script src="/web/static/js/jquery.js"></script>
			<script src="/web/static/js/wiki_auth.js"></script>
		{% endblock %}
	</head>
	<body>
			{% block header %}
				<header>
					<nav class="navbar navbar-fixed-top navbar-custom">
						<div class="container">
							<p style="color:#6D6D6D;font-weight:400;font-size:200%;"> OVASE </p>
								<div class="navbar-header">
							    	<button type="button" class="navbar-toggle navbar-custom-btn" data-toggle="collapse" data-target="#myNavbar">
										<span class="icon-bar style-bgc-grey"></span>
										<span class="icon-bar style-bgc-grey"></span>
										<span class="icon-bar style-bgc-grey"></span>
							      	</button>
							    </div>
							<div class="collapse navbar-collapse" id="myNavbar">
						    	<ul class="nav navbar-nav" style={navbarButtonStyle}>
									<li>
										<a href="{{ path('home') }}" class="navbar-txt">FRAMSIDE</a>
									</li>
									<li>
										<a href="{{ path('projectlist') }}" class="navbar-txt">PROSJEKTER</a>
									</li>
									<li>
										<a href="{{ path('actorlist') }}" class="navbar-txt">AKTØRER</a>
									</li>
									<li>
										<a href="{{ path('login') }}" class="navbar-txt">FAGWIKI</a>
									</li>
								</ul>
								<ul class="nav navbar-nav navbar-right">
								{% if app.user%}
									<li>
										<a href="{{ path('home')}}" class="navbar-txt">
												<span class="glyphicon glyphicon-user"></span> 
													Min side
										</a>
									</li>
									<li>
										<a href="{{ path('logout')}}" class="navbar-txt">
												<span class="glyphicon glyphicon-log-out"></span> 
													Logg ut
										</a>
									</li>
								{% else %}
									<li>
										<a href="{{ path('create_user')}}" class="navbar-txt">
											<span class="glyphicon glyphicon-user"></span> 
												Registrer
										</a>
									</li>
									<li>
										<a href="{{ path('login') }}" class="navbar-txt">
											<span class="glyphicon glyphicon-log-in"></span> 
												Logg inn
										</a>
									</li>
								{% endif %}
								</ul>
							</div>
						</div>
					</nav>
				</header>
		{% endblock %}
		<div style="margin-left:50px;">
		{% block body %}{% endblock %}
		</div>
		{% block footer %}
			<div class="footer-container">
				<div class="inner-container" id="footer-inner">
					<div class="footer">
						<a href= {{ path('home') }} >Hjem</a> |
						<a href="#">Om siden</a> | 
						<a href="#popup4">Foto</a> | 
						Kontakt: mail@ovase.no |
						{% if app.user%}
							Du er {{app.user}} |
							<a href="{{ path('logout') }}">Logg ut</a>
						{% else %}
							<a href="{{ path('login') }}">Logg inn</a>
						{% endif %}
					</div>
				</div>
			</div>
		{% endblock %}
	</body>
</html>
